<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_light_grey">


    <!-- Tip Amount text field -->
    <EditText
        android:id="@+id/tip_amount_text"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:hint="@string/tip"
        android:inputType="textPostalAddress"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        android:layout_above="@+id/location_request"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintBottom_toTopOf="@+id/location_request"
        app:layout_constraintTop_toBottomOf="@+id/tip_text" />

    <!-- Location text field -->
    <EditText
        android:id="@+id/location"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_above="@+id/store_name_text"
        android:layout_alignLeft="@+id/tip_amount_text"
        android:layout_alignStart="@+id/tip_amount_text"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:hint="@string/location"
        android:inputType="textPostalAddress"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintBottom_toTopOf="@+id/store_name_text"
        app:layout_constraintTop_toBottomOf="@+id/location_request" />

    <!-- Store Name text field -->
    <EditText
        android:id="@+id/store_name"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_above="@+id/expiration_time_text"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:hint="@string/store_name"
        android:inputType="textPostalAddress"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintBottom_toTopOf="@+id/expiration_time_text"
        app:layout_constraintTop_toBottomOf="@+id/store_name_text" />

    <!-- Expiration time/date text field -->
    <EditText
        android:id="@+id/expiration_time"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_above="@+id/items_comments"
        android:layout_alignEnd="@+id/location"
        android:layout_alignLeft="@+id/store_name"
        android:layout_alignRight="@+id/location"
        android:layout_alignStart="@+id/store_name"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:hint="@string/expiration_time"
        android:inputType="textPostalAddress"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintBottom_toTopOf="@+id/items_comments_text"
        app:layout_constraintTop_toBottomOf="@+id/expiration_time_text" />


    <!-- Items & Comments text field -->
    <EditText
        android:id="@+id/items_comments"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/post_request_button"
        android:layout_alignLeft="@+id/expiration_time"
        android:layout_alignStart="@+id/expiration_time"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:hint="@string/items_comments"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintBottom_toTopOf="@+id/post_request_button"
        app:layout_constraintTop_toBottomOf="@+id/items_comments_text" />

    <!-- Post button -->
    <Button
        android:id="@+id/post_request_button"
        android:layout_width="189dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/paidAidBlue"
        android:text="@string/post_request"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/items_comments" />

    <TextView
        android:id="@+id/tip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tip Amount"
        android:textStyle="bold"
        android:layout_above="@+id/tip_amount_text"
        android:layout_alignLeft="@+id/tip_amount_text"
        android:layout_alignStart="@+id/tip_amount_text"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toTopOf="@+id/tip_amount_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.523" />

    <TextView
        android:id="@+id/location_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:layout_above="@+id/location"
        android:layout_alignLeft="@+id/tip_text"
        android:layout_alignStart="@+id/tip_text"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_amount_text"
        android:layout_marginStart="27dp"
        app:layout_constraintBottom_toTopOf="@+id/location"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/store_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:textStyle="bold"
        android:layout_above="@+id/store_name"
        android:layout_alignLeft="@+id/location_request"
        android:layout_alignStart="@+id/location_request"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintBottom_toTopOf="@+id/store_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/expiration_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiration Time"
        android:textStyle="bold"
        android:layout_above="@+id/expiration_time"
        android:layout_alignLeft="@+id/store_name_text"
        android:layout_alignStart="@+id/store_name_text"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintBottom_toTopOf="@+id/expiration_time" />

    <TextView
        android:id="@+id/items_comments_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Items / Additional Comments"
        android:textStyle="bold"
        android:layout_above="@+id/items_comments"
        android:layout_alignLeft="@+id/expiration_time_text"
        android:layout_alignStart="@+id/expiration_time_text"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="27dp"
        app:layout_constraintTop_toBottomOf="@+id/expiration_time"
        app:layout_constraintBottom_toTopOf="@+id/items_comments" />


</android.support.constraint.ConstraintLayout>