<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uw.tacoma.edu.paidaid.view.PickUpRequestMessageFragment">

    <!-- Items & Comments text field -->
    <EditText
        android:id="@+id/items_comments"
        android:layout_width="324dp"
        android:layout_height="301dp"
        android:layout_alignBottom="@+id/post_request_button"
        android:background="@drawable/add_requests_style"
        android:ems="10"
        android:inputType="textMultiLine"
        android:paddingLeft="@dimen/text_margin"
        android:textColor="@color/grey"
        android:gravity="top|left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="@string/type_message"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="133dp" />

    <!-- Text view-->
    <TextView
        android:id="@+id/textView"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:text="Send your message:"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="68dp"
        android:layout_marginBottom="17dp"
        app:layout_constraintBottom_toTopOf="@+id/items_comments" />

    <!-- Send button -->
    <Button
        android:id="@+id/button"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/paidAidBlue"
        android:text="SEND!"
        android:textColor="@android:color/white"
        android:layout_marginRight="29dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="83dp" />

</android.support.constraint.ConstraintLayout>
