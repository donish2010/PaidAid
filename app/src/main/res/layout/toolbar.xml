<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/paidAidBlue"
    android:orientation="horizontal">

    <!-- Tool Bar Customization Image View-->
    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/paidaidlogotoolbar"
        android:id="@+id/toolbar_corner_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!-- Tool Bar Customization Image View-->
    <ImageView
        android:layout_width="110dp"
        android:layout_height="25dp"
        android:id="@+id/toolbar_paidaid_text"
        android:background="@drawable/paidaidtext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/toolbar_corner_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

